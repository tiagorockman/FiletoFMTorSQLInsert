@model FILEtoFMT.Models.Arquivo

@{
    ViewData["Title"] = "Gerador FMT";
}

<h1>Gerador FMT</h1>

<h4>Configurações</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="GenerateFMT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="filename" class="control-label">Selecione o Arquivo</label>
                <input type="file" asp-for="filename" accept=".csv" class="form-control" />
                <span asp-validation-for="filename" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="delimiter" class="control-label">Delimitador</label>
                    <input asp-for="delimiter" class="form-control" />
                    <span asp-validation-for="delimiter" name="delimiter" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="lineBreak" class="control-label">Quebra de Linha</label>
                    <input asp-for="lineBreak" class="form-control" />
                    <span asp-validation-for="lineBreak" name="lineBreak" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Gerar" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div class="control-label">
    @if (TempData.Peek("Confirmacao") != null)
    {
        <h6 class="alert alert-success">@TempData.Peek("Confirmacao")</h6>
    }
</div>

<div class="control-label">
    @if (TempData.Peek("Caminho") != null)
    {
        <h6 class="alert alert-success">@TempData.Peek("Caminho")</h6>
    }
</div>

<div class="control-label">
    @if (TempData.Peek("Erro") != null)
    {
        <h6 class="alert alert-danger">@TempData.Peek("Erro")</h6>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
